<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">
    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="20"
        android:useLevel="false">
        <gradient
            android:centerColor="@color/centercolor_footer_progressbar"
            android:centerY="0.50"
            android:endColor="@color/endcolor_footer_progressbar"
            android:startColor="@color/startcolor_footer_progressbar"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>