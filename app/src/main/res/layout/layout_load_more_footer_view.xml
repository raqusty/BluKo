<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="15dp">

    <ProgressBar
        android:id="@+id/progress_bar_footer"
        android:layout_width="@dimen/size_progress_bar_footer"
        android:layout_height="@dimen/size_progress_bar_footer"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/size_progress_bar_footer"
        android:indeterminateDrawable="@drawable/progress_ring_gray_mini" />

    <TextView
        android:id="@+id/tv_tips_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data_loading" />
</LinearLayout>